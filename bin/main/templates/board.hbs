    <link rel="stylesheet" href="/css/lib/bootstrap.min.css">
    <link rel="stylesheet" href="/css/app/board.css">
     <script type="text/javascript" src="/js/lib/jquery-3.4.1.min.js"></script>

<body>
    <div class="col-md-12">
        <!-- 목록 출력 영역 -->
        <table class="table table-horizontal table-bordered">
            <thead class="thead-strong">
                <tr>
                    <th>게시글번호</th>
                    <th>제목</th>
                    <th>작성자</th>
                    <th>최종수정일</th>
                </tr>
            </thead>
            <tbody id="tbody">
            {{#each posts}}
            		<tr>
                    <td>{{id}}</td>
                    <td><button class="tbtn" data-toggle="modal" data-target="#detailPostsModal" style="background:none; border-style:none" type="button" value="{{id}}">{{title}}</button></td>
                    <td>{{author}}</td>
                    <td>{{modifiedDate}}</td>
                </tr>
            {{/each}}
            </tbody>
            
        </table>
    </div>
    <input type="hidden" value="{{pageinfo.pageNum}}" id="pageNum"/>
    <div id="paging_div">
    	{{#if pageinfo.prev}}
    		<button class="page_btn" id="page_prev" value="{{pageinfo.prev}}" type="button">prev</button>
    	{{/if}}
    	<span id='page_btn_span'>
    	<script>
    		for(var i={{pageinfo.startPage}}; i<={{pageinfo.endPage}};i++){
    			$('#page_btn_span').append('<button class="page_btn page_num_btn" type="button">'+i+'</button>');
    		}
    	</script>
    	</span>
    	{{#if pageinfo.next}}
    		<button class="page_btn" id="page_next" value="{{pageinfo.next}}" type="button">next</button>
    	{{/if}}
    </div>
	{{> board_content_modal}}
	{{> board_regist_modal}}
    <button style="float:right;" type="button" class="btn btn-primary" data-toggle="modal" data-target="#savePostsModal">글 등록</button>
    <script type="text/javascript" src="/js/lib/bootstrap.min.js"></script>
    <script src="/js/app/board.js"></script>
